{
    "manifest_version": 3,
    "name": "Sanitize It",
    "version": "1.3.0",
    "description": "Remove tracking information from the current page and automatically copy the URL to your clipboard.",
    "permissions": [
      "activeTab",
      "scripting",
      "clipboardWrite",
      "tabs",
      "notifications"
    ],
    "action": {
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "background": {
      "service_worker": "background.js"
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }