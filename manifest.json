{
  "manifest_version": 3,
  "name": "Sanitize It",
  "version": "1.4.0",
  "description": "Remove tracking information from the current page and automatically copy the URL to your clipboard.",
  "permissions": [
    "activeTab",
    "scripting",
    "clipboardWrite",
    "tabs"
  ],
  "action": {
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "Sanitize It"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "sanitize-it@example.com",
      "strict_min_version": "109.0"
    }
  }
}
